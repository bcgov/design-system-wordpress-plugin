{
  "name": "design-system-wordpress-plugin",
  "description": "Design System WordPress Plugin",
  "author": "govwordpress@gov.bc.ca",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Block Theme",
    "BCGov",
    "DesignSystem",
    "Gutenberg"
  ],
  "homepage": "https://github.com/bcgov/design-system-wordpress-plugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/design-system-wordpress-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/bcgov/design-system-wordpress-plugin#readme",
    "email": "govwordpress@gov.bc.ca"
  },
  "engines": {
    "node": "^24.12.0"
  },
  "main": "index.js",
  "devDependencies": {
    "@bcgov/wordpress-eslint": "github:bcgov/wordpress-eslint#semver:1.x",
    "@bcgov/wordpress-stylelintrc": "github:bcgov/wordpress-stylelintrc#semver:1.x",
    "@wordpress/env": "^10.36.0",
    "@wordpress/scripts": "^29.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "@wordpress/compose": "^7.36.0",
    "@wordpress/element": "^6.36.0",
    "@wordpress/hooks": "^4.36.0"
  },
  "scripts": {
    "start": "npm i && wp-scripts start",
    "build": "npm i && wp-scripts build",
    "lint:css": "wp-scripts lint-style 'src/**/*.scss' --allow-empty-input",
    "fix:css": "wp-scripts lint-style 'src/**/*.scss' --fix --allow-empty-input",
    "lint:js": "wp-scripts lint-js 'src/**/*.js'",
    "fix:js": "wp-scripts lint-js 'src/**/*.js' --fix",
    "test": "wp-scripts test-unit-js --passWithNoTests",
    "test:e2e": "wp-scripts test-playwright",
    "test:e2e:help": "wp-scripts test-playwright --help",
    "test:e2e:debug": "wp-scripts test-playwright --debug",
    "test:e2e:headed": "wp-scripts test-playwright --headed",
    "test:unit:php": "wp-env run tests-cli --env-cwd=wp-content/plugins/design-system-wordpress-plugin composer run test",
    "wp-env": "wp-env"
  }
}
