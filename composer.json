{
    "name": "bcgov-plugin/design-system-wordpress-plugin",
    "description": "Design System WordPress Plugin",
    "type": "wordpress-plugin",
    "license": "Apache-2.0",
    "repositories": [
        {
            "type": "composer",
            "url": "https://blog.gov.bc.ca/satis"
        }
    ],
    "require-dev": {
        "bcgov/wordpress-utils": "2.8.1",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
          "Bcgov\\DesignSystemPlugin\\": "src/"
        }
    },
    "scripts": {
        "update-version":[
            "bash update-version.sh"
        ],
        "production": [
            "composer validate",
            "composer phpcbf",
            "composer phpcs",
            "npm run fix:js",
            "npm run fix:css"
        ],
        "phpcs": [
            "Bcgov\\Script\\Standards::phpcs"
        ],
        "phpcbf": [
            "Bcgov\\Script\\Standards::phpcbf"
        ],
        "test": [
             "vendor/bin/phpunit --testdox "
        ],
        "coverage": [
            "./vendor/bin/phpunit --coverage-html ./coverage/php/"
        ],
        "phpcs-allow-todo": [
            "vendor/bin/phpcs -ps --standard=./vendor/bcgov/wordpress-utils/wordpress.xml  --exclude=Generic.Commenting.Todo --colors --ignore=**/build/** ./"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}